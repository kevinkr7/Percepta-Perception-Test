<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.percepta.controller.QuestionController"
           styleClass="root-bg">

    <VBox alignment="CENTER" spacing="30" maxWidth="600">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>

        <VBox spacing="8" maxWidth="600">
            <Label text="Assessment Progress" styleClass="subtitle" style="-fx-opacity: 0.7;"/>
            <ProgressBar fx:id="progressBar" progress="0.0" maxWidth="Infinity" styleClass="progress-bar"/>
        </VBox>

        <VBox styleClass="question-card" spacing="25" alignment="CENTER_LEFT">

            <Label fx:id="questionLabel"
                   text="Loading Question..."
                   wrapText="true"
                   styleClass="headline"
                   style="-fx-font-size: 22px;"/>

            <VBox spacing="12">
                <Button fx:id="opt1" onAction="#handleOption" text="Option 1"
                        maxWidth="Infinity" styleClass="option-tile"/>

                <Button fx:id="opt2" onAction="#handleOption" text="Option 2"
                        maxWidth="Infinity" styleClass="option-tile"/>

                <Button fx:id="opt3" onAction="#handleOption" text="Option 3"
                        maxWidth="Infinity" styleClass="option-tile"/>

                <Button fx:id="opt4" onAction="#handleOption" text="Option 4"
                        maxWidth="Infinity" styleClass="option-tile"/>

                <Button fx:id="opt5" onAction="#handleOption" text="Option 5"
                        maxWidth="Infinity" styleClass="option-tile"/>
            </VBox>

        </VBox>
    </VBox>

</StackPane>