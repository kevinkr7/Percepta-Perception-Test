<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.percepta.controller.ResultController"
           styleClass="root-bg">

    <VBox fx:id="root"
          alignment="CENTER"
          styleClass="card"
          maxWidth="850"
          maxHeight="550">

        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <HBox spacing="50" alignment="CENTER_LEFT">

            <VBox alignment="CENTER" minWidth="250">
                <ImageView fx:id="resultIcon"
                           fitHeight="280"
                           fitWidth="280"
                           preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, rgba(56, 189, 248, 0.4), 40, 0.3, 0, 0);"/>
            </VBox>

            <Separator orientation="VERTICAL" style="-fx-opacity: 0.1;"/>

            <VBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">

                <VBox spacing="5">
                    <Label text="YOUR DOMINANT STYLE:"
                           styleClass="subtitle"
                           style="-fx-font-size: 13px; -fx-opacity: 0.7; -fx-font-weight: bold; -fx-letter-spacing: 1;"/>

                    <Label fx:id="dominantLabel"
                           text="LOADING..."
                           styleClass="hero-title"
                           style="-fx-font-size: 42px; -fx-text-fill: linear-gradient(to right, #38bdf8, #818cf8);"/>

                    <Label fx:id="explanationLabel"
                           text="Calculating..."
                           wrapText="true"
                           styleClass="explanation"
                           style="-fx-text-alignment: LEFT; -fx-font-size: 15px;"/>
                </VBox>

                <Region prefHeight="10"/>

                <VBox spacing="12">
                    <VBox fx:id="visualBox" spacing="4">
                        <HBox>
                            <Label text="Visual" styleClass="subtitle" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="visualPct" text="0%" styleClass="percent"/>
                        </HBox>
                        <ProgressBar fx:id="visualBar" maxWidth="Infinity" progress="0.0"/>
                    </VBox>

                    <VBox fx:id="auditoryBox" spacing="4">
                        <HBox>
                            <Label text="Auditory" styleClass="subtitle" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="auditoryPct" text="0%" styleClass="percent"/>
                        </HBox>
                        <ProgressBar fx:id="auditoryBar" maxWidth="Infinity" progress="0.0"/>
                    </VBox>

                    <VBox fx:id="kinestheticBox" spacing="4">
                        <HBox>
                            <Label text="Kinesthetic" styleClass="subtitle" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="kinestheticPct" text="0%" styleClass="percent"/>
                        </HBox>
                        <ProgressBar fx:id="kinestheticBar" maxWidth="Infinity" progress="0.0"/>
                    </VBox>

                    <VBox fx:id="analyticalBox" spacing="4">
                        <HBox>
                            <Label text="Analytical" styleClass="subtitle" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="analyticalPct" text="0%" styleClass="percent"/>
                        </HBox>
                        <ProgressBar fx:id="analyticalBar" maxWidth="Infinity" progress="0.0"/>
                    </VBox>

                    <VBox fx:id="intuitiveBox" spacing="4">
                        <HBox>
                            <Label text="Intuitive" styleClass="subtitle" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="intuitivePct" text="0%" styleClass="percent"/>
                        </HBox>
                        <ProgressBar fx:id="intuitiveBar" maxWidth="Infinity" progress="0.0"/>
                    </VBox>
                </VBox>

                <Region prefHeight="10"/>

                <Button text="Retake Assessment"
                        styleClass="primary-btn"
                        onAction="#onRetake"/>

            </VBox>
        </HBox>
    </VBox>
</StackPane>